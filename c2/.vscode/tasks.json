{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "PE: Compilar",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-Wvla",
                "-std=c99",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Professor."
        },
        {
            "label": "PE: Rodar",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [
            ],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "PE: Rodar (input.in)",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [
                "<",
                "input.in"
            ],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "PE: Compilar & Roda",
            "dependsOrder": "sequence",
            "dependsOn": [
                "PE: Compilar",
                "PE: Rodar"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "PE: Compilar & Roda (input.in)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "PE: Compilar",
                "PE: Rodar (input.in)"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}